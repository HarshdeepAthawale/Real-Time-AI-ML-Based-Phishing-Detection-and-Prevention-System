{
  "manifest_version": 2,
  "name": "Phishing Detection & Prevention",
  "version": "1.0.0",
  "description": "Real-time AI/ML-based phishing detection and prevention system",
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "webRequest",
    "webNavigation",
    "alarms",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": ["blocked.html"]
}
